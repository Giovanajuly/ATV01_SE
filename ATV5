int pinoLDR = A0;   
int pinoRele = 7;   
int valorLuz = 0;   
 
void setup() {
  pinMode(pinoRele, OUTPUT);
  Serial.begin(9600);  
}
 
void loop() {
  valorLuz = analogRead(pinoLDR);   
  Serial.println(valorLuz);         
 
  if (valorLuz < 500) {             
    digitalWrite(pinoRele, HIGH);   
  } else {
    digitalWrite(pinoRele, LOW); 
  }
 
  delay(200); 
}
